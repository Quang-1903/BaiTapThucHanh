@using BaiTapThucHanh.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<tDanhMucSP>
@{
    ViewBag.Title = "SanPhamTheoChuDe";
    Layout = "~/Views/IndexLayout.cshtml";
}

@{ 
    int i = 0;
    foreach(var item in Model)
            {
        i++;
        <div class="SanPham">
            <a href="@Url.Action("XemChiTiet","Home",new { @MaSP = item.MaSP })" >
                <div class="HinhAnh">
                    <img src=@Url.Content("~/Image/" +item.Anh ) width="100" height="150"/>

                </div>
                <div class="ThongTin">
                    <div title="@item.TenSP">@item.TenSP</div>
                </div>
            </a>
        </div>
        if(i%4==0)
        {
            <div style="clear:both"></div>
        }
    }
}
Trang @(Model.PageCount<Model.PageNumber ? 0: Model.PageNumber)/@Model.PageCount
<div class="menuTrang">
    @Html.PagedListPager(Model, page => Url.Action("SanPhamTheoChuDe", new { page = page}))
</div>
<style>
    .menuTrang li
    {
        display:inline;
    }
    .SanPham
    {
        float:left;
        width:180px;
        margin-left:3%;
        margin-top:5px;

    }
    .HinhAnh
    {
        width:150px;
        height:150px;
        padding-top:0px;
        padding-bottom:0px;

    }
    .ThongTin
    {
        padding-top:0px;
        padding-bottom:5px;
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size:14px;
        font-weight:200;
    }
</style>

